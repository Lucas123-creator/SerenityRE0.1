API_PORT=8000
API_RELOAD=false
NODE_ENV=production

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Database Configuration (REQUIRED for production)
SUPABASE_URL=${SUPABASE_URL}
